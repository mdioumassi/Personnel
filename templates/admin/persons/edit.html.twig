{% extends 'base.html.twig' %}

{% block title %}Modification!{% endblock %}

{% block body %}
    <h1>Modification</h1>
    {{ form_start(form) }}
        <div class="grid">
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
        </div>
    {{ form_row(form.birthday) }}
    {{ form_row(form.address) }}
    {{ form_row(form.post) }}
    {{ form_row(form.photo) }}
    {{ form_row(form.persons) }}
    <div class="grid w3-margin-top">
        <button type="submit">Enregistrer <i class="fa fa-edit"></i></button>
        <button class="w3-red" onclick="document.getElementById('id01').style.display='block'">Supprimer <i class="fa fa-trash"></i></button>
        <a href="{{ path('admin_person_list') }}"><button class="w3-teal">Annuler <i class="fa fa-users"></i></button></a>
    </div>
    {{ form_end(form) }}

    <div id="id01" class="w3-modal">
        <div class="w3-modal-content" style="width: 350px">
            <header class="w3-container w3-red">
            <span onclick="document.getElementById('id01').style.display='none'"
                  class="w3-button w3-display-topright">&times;</span>
                <h4>SUPPRESSION</h4>
            </header>
            <div class="w3-container">
                <p class="w3-center">Voulez vous supprimer ! </br> {{ person.firstname }} <strong>{{ person.lastname|upper }}</strong></p>
            </div>
            <footer class="w3-container w3-black w3-padding">
                <div class="grid">
                    <a href="{{ path('admin_person_edit',  {'id': person.id} ) }}"><button class="w3-button w3-left w3-light-grey w3-round-large">Non</button></a>
                    <a href="{{ path('admin_person_delete', {'id': person.id}) }}"><button class="w3-button w3-right w3-red w3-round-large">Oui</button></a>
                </div>
            </footer>
        </div>
    </div>
{% endblock %}
