{% extends 'base.html.twig' %}

{% block title %}Liste des membres!{% endblock %}

{% block body %}
    <div class="grid">
        <h1>liste du personnel</h1>
        <a href="{{ path('admin_person_list') }}"><button>Administration</button></a>
    </div>
    <div class="grid">
        {% for person in persons %}
            <div class="w3-card-4">
                <div class="w3-container">
                    <div class="grid">
                        <h6>{{ person.firstname[:1]~'.' }} {{ person.lastname|upper }} - <span class="w3-text-green">{{ person.post|capitalize }}</span></h6>
                    </div>
                </div>
                <div class="w3-display-container">
                    <img class="w3-responsive" src="{{ asset('/uploads/photosProfile/'~person.photo) }}" alt="Alps" style="width:100%">
                    <div class="w3-display-middle w3-display-hover">
                        <a href="{{ path('profile_detail', {'id':person.id}) }}"><button class="w3-button w3-teal">DÃ©tail</button></a>
                    </div>
                    <div class="w3-container">
                        {% if person.persons is not empty %}
                            <div class="grid">
                                <h6>Resp.:{{ person.persons }}</h6>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
